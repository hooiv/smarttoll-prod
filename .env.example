# .env.example - copy to .env and fill in real values

# Postgres settings
POSTGRES_DB=smarttoll_dev
POSTGRES_USER=smarttoll_user
POSTGRES_PASSWORD=changeme_in_prod_123!

# Redis settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Kafka settings
KAFKA_BROKER=kafka:29092
GPS_TOPIC=smarttoll.gps.raw.v1
TOLL_EVENT_TOPIC=smarttoll.toll.events.v1
PAYMENT_EVENT_TOPIC=smarttoll.payment.events.v1
CONSUMER_GROUP_ID=toll_processor_group_dev_1
BILLING_CONSUMER_GROUP_ID=billing_service_group_dev_1

# Billing Service
BIND_HOST=0.0.0.0
BIND_PORT=8000

# Authentication (required — no requests will be accepted without a valid key)
SERVICE_API_KEY=supersecretapikey123

# CORS (optional — comma-separated allowed origins; "*" permits all, restrict in production)
# CORS_ORIGINS=["https://dashboard.example.com","http://localhost:3000"]

# Database connection pool tuning (optional)
# POSTGRES_POOL_SIZE=5
# POSTGRES_MAX_OVERFLOW=10
# POSTGRES_POOL_TIMEOUT=30

# Payment gateway simulation
# MOCK_PAYMENT_FAIL_RATE=0.1

# Logging
# LOG_LEVEL=INFO
